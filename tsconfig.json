{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["ES2020", "DOM"],
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["@webgpu/types"],
    "paths": {
      "@/*": ["./web/src/*"],
      "@lib/*": ["./src/*"]
    },
    "baseUrl": ".",
  },
  "include": [
    "src/**/*.ts",
    "web/src/**/*.ts",
    "web/vite-env.d.ts"
  ]
}
